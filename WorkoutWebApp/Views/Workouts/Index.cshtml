@model IEnumerable<WorkoutWebApp.Models.Workout>

@{
    ViewData["Title"] = "Index";
}

 <div class="container p-3">
     <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workout List</h2>
         </div>
        <div class="col-6 text-end">
            <a asp-controller="Workouts" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new workout
            </a>
        </div>
     </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Exercise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sets)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reps)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDatetime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Exercise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDatetime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>